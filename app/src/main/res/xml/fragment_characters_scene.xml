<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Transition
        app:constraintSetEnd="@+id/end_collapsing"
        app:constraintSetStart="@+id/start_collapsing">
        <KeyFrameSet>
            <KeyAttribute
                android:scaleX="1.0"
                android:scaleY="1.0"
                app:framePosition="50"
                app:motionTarget="@+id/txt_balance_value" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="0.5"
                app:framePosition="100"
                app:motionTarget="@+id/txt_balance_value" />
            <KeyAttribute
                android:scaleX="1.0"
                android:scaleY="1.0"
                app:framePosition="50"
                app:motionTarget="@+id/frame_balance_hide" />
            <KeyAttribute
                android:scaleX="0.5"
                android:scaleY="1.0"
                app:framePosition="100"
                app:motionTarget="@+id/frame_balance_hide" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start_collapsing">
        <Constraint
            android:id="@+id/ivLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/txt_balance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivLogo" />

        <Constraint
            android:id="@+id/txt_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/frame_balance_hide"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/txt_balance_value"
            app:layout_constraintEnd_toEndOf="@+id/txt_balance_value"
            app:layout_constraintStart_toStartOf="@+id/txt_balance_value"
            app:layout_constraintTop_toTopOf="@+id/txt_balance_value" />

        <Constraint
            android:id="@+id/txt_balance_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/frame_balance_hide"
            app:layout_constraintEnd_toStartOf="@+id/iv_eye_closed"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frame_balance_hide" />

        <Constraint
            android:id="@+id/iv_eye_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/txt_balance_hide"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_balance_hide"
            app:layout_constraintTop_toTopOf="@+id/txt_balance_hide" />

    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_collapsing">
        <Constraint
            android:id="@+id/ivLogo"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="92dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Constraint
            android:id="@+id/txt_balance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivLogo" />

        <Constraint
            android:id="@+id/txt_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/ivLogo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ivLogo" />

        <Constraint
            android:id="@+id/frame_balance_hide"
            android:layout_width="0dp"
            android:layout_height="3dp"
            android:alpha="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/txt_balance_value"
            app:layout_constraintEnd_toEndOf="@+id/txt_balance_value"
            app:layout_constraintStart_toStartOf="@+id/txt_balance_value"
            app:layout_constraintTop_toTopOf="@+id/txt_balance_value" />

        <Constraint
            android:id="@+id/txt_balance_hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/frame_balance_hide"
            app:layout_constraintEnd_toStartOf="@+id/iv_eye_closed"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/frame_balance_hide" />

        <Constraint
            android:id="@+id/iv_eye_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="1.0"
            app:layout_constraintBottom_toBottomOf="@+id/txt_balance_hide"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txt_balance_hide"
            app:layout_constraintTop_toTopOf="@+id/txt_balance_hide" />

    </ConstraintSet>

    <Transition
        app:constraintSetEnd="@+id/end_hide"
        app:constraintSetStart="@+id/start_hide"
        app:duration="1000">
        <OnClick
            app:clickAction="toggle"
            app:targetId="@+id/btn_hide_balance" />
    </Transition>

    <ConstraintSet android:id="@+id/start_hide">
        <Constraint
            android:id="@+id/txt_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <PropertySet
                android:visibility="visible"
                app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end_hide">
        <Constraint
            android:id="@+id/txt_balance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <PropertySet
                android:visibility="gone"
                app:visibilityMode="ignore" />
        </Constraint>
    </ConstraintSet>

</MotionScene>
